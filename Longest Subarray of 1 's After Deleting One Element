class Solution {
    public int longestSubarray(int[] nums) {

        int tail=0;
        int count=0;
        int res=0;
        for(int head=0;head<nums.length;head++){

            if(nums[head]==0) count++;
            while(count>1){
                if(nums[tail]==0) count--;
                tail++;
            }

            res=Math.max(res,head-tail);



        }

        return res;
        
    }
}
